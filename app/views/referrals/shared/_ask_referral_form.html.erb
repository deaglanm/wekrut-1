  <!-- add logic for referral_name and referral_email -->
  <div>
    <%= f.label "Your Name" %><br>
    <%= f.text_field :referral_name, value: @your_name %>
  </div>

   <div>
    <%= f.label "Your Email" %><br>
    <%= f.text_field :referral_email %>
  </div>

   <div>
    <%= f.label "Your LinkedIn Profile URL" %><br>
    <%= f.text_field :linked_profile_url %>
  </div>

   <div>
