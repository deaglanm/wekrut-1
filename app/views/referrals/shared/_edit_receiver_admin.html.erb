<div> Referral from <%= @referrer_FN %> <%= @referrer_LN %>
</div>
<%= render 'layouts/header' %>
<%= render 'layouts/flash' %>

<div class="container" style="margin-top:60px">
  <div class="col-md-12">
      <div class="col-md-8">
         <div class="panel panel-default">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h2 class="panel-referal">
                  Job Description
                </h2>
              </div>
              <div class="panel-body">
                <div class="login-form">
                  <div class="details-section">
                 <strong><%= @job.job_name %> - <%= @job.name %></strong>
                  </div>
                  <div class="details-section">
                    <strong>Location:</strong>
                    <%= @job.city %>
                    <%= @job.state %>
                  </div>
                  <div class="details-section">
                    <strong>Description:</strong>
                    <%= @job.description.gsub(/\n/, '<br/>').html_safe %>
                  </div>
                  <div class="details-section_end">
                    <strong>Skills</strong>
                    <%= @job.speciality_1 %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading"><h3 class="panel-title"><strong>Recruiter Update Form</strong></h3>
          </div>
          <div class="panel-body">
                 <%= form_for :referral, url: {action:"update"}, method: :put do |f| %>
            <div class="form-group">
                 <%= f.label "Referral Name" %><br>
                <%= f.text_field :referral_name, :placeholder => 'Enter Your name', :class => 'form-control login-field' %>
            </div>

            <div class="form-group">
                  <%= f.label "Referral Email" %><br>
                  <%= f.text_field :referral_email, :placeholder => 'Referral Email', :class => 'form-control login-field' %>
            </div>

            <div class="form-group">

              <%= f.label "Relationship" %> <br>
              <%= f.select :relationship, relationship_choices %>

            </div>

            <div class="form-group">
              <%= f.label "Referral LinkedIn Profile URL" %><br>
              <div class="input-group">
                <span class="input-group-addon"><span class="fa fa-linkedin"></span></span>
                <%= f.text_field :linked_profile_url, :class => 'form-control login-field' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label "Referral GitHub Profile URL" %><br>
              <div class="input-group">
                <span class="input-group-addon"><span class="fa fa-github"></span></span>
                <%= f.text_field :github_profile_url, :class => 'form-control login-field'%>
              </div>
            </div>
            <div class="form-group">
              <div>
                  <!-- #TODO NEED LOGIC TO SHOW THE CORRECT AVAILABLE CHOICES-->
                  <%= f.label "Status" %><br>
                  <%= f.select :status, status_choices %>
              </div>

              <div>
                  <%= f.hidden_field :job_id, :value => @job.id%>
                  <%= f.hidden_field :ref_type, value: @ref_type %>
              </div>
<br>
              <div>
                  <%= f.submit "Submit to Wekrut", :class => "btn btn-primary pull-right" %>
              </div>

                <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<br>
<br>
<br>
<%= render 'layouts/footer' %>







