<% if @ref_type == "refer" %>
  <% if @my_status == "Receiver-A" %>
    <%= render 'referrals/shared/edit_receiver_admin' %>
  <% elsif @my_status == "Receiver-U" %>
    <%= render 'referrals/shared/edit_receiver_user' %>
  <% else %>
    <%= render 'referrals/shared/edit_sender' %>
  <% end %>
<% else %>
  <%= render 'referrals/shared/ask_referral_form' %>
<% end %>

