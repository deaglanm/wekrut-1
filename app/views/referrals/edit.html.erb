<% if @ref_type == "refer" %>
  <% if @status == "Receiver-U" %>
    <%= render 'referrals/shared/receiver_user_edit_form' %>
  <% elsif @status == "Sender" %>
    <%= render 'referrals/shared/sender_edit_form' %>
  <% else %>
    <%= render 'referrals/shared/receiver_admin_edit_form' %>
  <% end %>
<% else %>
  <%= render 'referrals/shared/ask_referral_form' %>
<% end %>

