<%= render 'layouts/headerjob' %>

<div class="container" style="margin:140px">
  <div class="row"><div class="col-lg-12">
    <div class="col-md-8 col-md-offset-1">
      <div class="candidate">
        <div class="person_header">
           <strong>Referral Fee:</strong>
           <%= @job.referral_fee/2 %>
        </div>
       <div class="details-section">
         <strong>About <%= @job.name %></strong>
       </div>
       <div class="details-section">
        <strong>Location:</strong>
        <%= @job.city %>
        <%= @job.state %>
      </div>
       <div class="details-section">
      <strong>Description:</strong>
        <%= @job.description %>
      </div>
        <div class="details-section">
        <strong>Skills</strong>
         <%= @job.speciality_1 %>
      </div>
      <div class="details-section_end">
        <nav>


      <div class="col-lg-6"><%= link_to "Refer", new_referral_path(job_id: @job.id, ref_type: "refer" ) %></div>

      <div class="col-lg-6"><%= link_to 'Ask to be Referred', new_referral_path(job_id: @job.id, ref_type: "ask_ref")%></div>



      <% if !current_admin.nil? %>
        <% if current_admin.id == @job.admin_id %>
          <%= link_to 'Edit', edit_job_path%>
          </nav>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
