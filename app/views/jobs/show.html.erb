<%= render 'layouts/headerjob' %>



<div class="container" style="margin-top:160px">
  <div class="col-md-8 col-md-offset-2">
   <div class="panel panel-default">
     <div class="panel-heading"><h2 class="panel-referal"><strong>Referral Fee:</strong>
       <%= @job.referral_fee/2 %></h2></div>
       <div class="panel-body">
        <div class="login-form">
          <div class="details-section">  
           <strong>About <%= @job.name %></strong>
         </div>
         <div class="details-section">
          <strong>Location:</strong>
          <%= @job.city %>
          <%= @job.state %>
        </div>
        <div class="details-section">
          <strong>Description:</strong>
          <%= @job.description %>
        </div>
        <div class="details-section">
          <strong>Skills</strong>
          <%= @job.speciality_1 %>
        </div>
        <div class="details-section_end">
          <nav>


            <div class="col-lg-3 col-lg-offset-2">

              <%= link_to "REFER", new_referral_path(job_id: @job.id, ref_type: "refer"),:class => 'Refer_Button'%></div>

              <div class="col-lg-6"><%= link_to 'ASK TO BE REFFERED', new_referral_path(job_id: @job.id, ref_type: "ask_ref"),:class => 'Refer_Button'%></div>




            </nav>



          </div>
        </div>
      </div></div>
      </div>

