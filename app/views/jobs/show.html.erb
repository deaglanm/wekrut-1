<%= render 'layouts/headerjob' %>

<section class="jobs">
  <div class="container" style="margin-top:40px">
    <div class="col-md-12">
      <div class="col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading"><h2 class="panel-referal">
             <%= @job.job_name %> - <%= @job.name %></h2>
          </div>
          <div class="panel-body">
            <div class="login-form">
              <div class="details-section">  
                 <strong>About <%= @job.name %></strong>
              </div>
              <div class="details-section">
                <strong>Location:</strong>
                <%= @job.city %>
                <%= @job.state %>
              </div>
              <div class="details-section">
                <strong>Description:</strong>
                <%= @job.description %>
              </div>
              <div class="details-section_end">
                <strong>Skills</strong>
                <%= @job.speciality_1 %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">


        <div class="panel panel-default center">
          <div class="panel-heading"><h2 class="panel-referal"><strong>Referral Fee:</strong>
             $<%= @job.referral_fee %></h2>
          </div>
          <div class="panel-body">
            <div class="login-form">
               <%= form_for :referral, url: referrals_path do |f| %>

         

            <div class="form-group">
              <%= f.label "Who would you like to refer?" %><br>
              <%= f.text_field :referral_name, :placeholder => 'Enter Referral Name', :class => 'form-control login-field' %>
            </div>

            <div class="form-group">
              <%= f.label "What is their email?" %><br>
              <%= f.text_field :referral_email, :placeholder => 'Referral Email', :class => 'form-control login-field' %>
            </div>

            <div class="form-group">
               <label> Relationship? </label>
               <row> <%= f.select :relationship, relationship_choices %></row>
            </div>

       

            <div class="form-group">
              <%= f.label "What is their LinkedIn Profile URL" %><br>
              <div class="input-group">
               <span class="input-group-addon"><span class="fa fa-linkedin"></span></span>

                  <%= f.text_field :linked_profile_url, :class => 'form-control login-field' %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label "What is their GitHub Profile URL" %><br>
              <div class="input-group">
                <span class="input-group-addon"><span class="fa fa-github"></span></span>
                  <%= f.text_field :github_profile_url, :class => 'form-control login-field'%>
              </div>
            </div>

            <div>
              <%= f.submit "Submit to Wekrut", :class => "btn btn-primary pull-right" %>
            </div>

            <div>
             <%= f.hidden_field :job_id, :value => @job.id%>
             <%= f.hidden_field :ref_type, value: @ref_type %>
            </div>
             <% end %>
            </div>
              <div class="details-section">  
                <%= link_to "REFER", new_referral_path(job_id: @job.id, ref_type: "refer"),:class => 'Refer_Button'%>

              <%= link_to 'APPLY', new_referral_path(job_id: @job.id, ref_type: "ask_ref"),:class => 'Refer_Button'%>
              </div>
              <div class="details-section_end">  
                <i class="fa fa-linkedin-square fa-3x"></i>&nbsp&nbsp&nbsp<i class="fa fa-twitter-square fa-3x"></i>&nbsp&nbsp&nbsp<i class="fa fa-facebook-square fa-3x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
      <%= render "layouts/footer" %>