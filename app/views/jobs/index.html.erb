<%= render 'layouts/header' %>


<section class="jobs">
  <div class="container">

    <div class="page page-table" data-ng-controller="tableCtrl">

      <section class="panel panel-default table-dynamic">
        <div class="panel-heading">
          <% if user_signed_in?  %>
            Signed in as <%= current_user.email %>. Not you?
            <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
          <% elsif admin_signed_in? %>
            Signed in as <%= current_admin.email %>. Not you?
            <%= link_to "Sign out", destroy_admin_session_path, :method => :delete %>
          <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-default btn-lg" %>
          <%= link_to "sign in", new_user_session_path, class: "btn btn-default btn-lg" %>
          <% end %>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
              <row>
                <strong><span class="fa fa-th"></span> Job Postings

              </row>
          </div>
          <table class="table">
            <tr>
              <th><%= sort_link @search, :name, "Company Name" %></th>
              <th><%= sort_link @search, :job_name, "Position" %></th>
              <th><%= sort_link @search, :city, "City" %></th>
              <th><%= sort_link @search, :state, "State" %></th>
              <th><%= sort_link @search, :speciality_1, "Skills" %></th>
              <th><%= sort_link @search, :referral_fee, "Referral Fee" %></th>
            </tr>

            <% @jobs.each do |job| %>

            <tr>
              <td>
                <% if job.image_url.nil? %>
                  <%= job.name %>
                <% else %>
                  <%= image_tag "#{job.image_url(:thumb)}"  %>
                <% end %>
              </td>

              <td><%= link_to job.job_name, "/jobs/#{job.id}" %></td>

              <td><%= job.city %></td>

              <td><%= job.state %></td>

              <td><%= job.speciality_1 %></td>

              <td><%= job.referral_fee   %></td>
            </tr>
          </tr>
        </tbody>
        <% end %>
      </table>

      <footer class="table-footer">
        <div class="row">

        </div>
      </div>
    </footer>
  </section>

</div>




