
<%= render 'layouts/header' %>

<section class="jobs">
  <%= render 'layouts/flash' %>
  <div class="container">
    <div class="page page-table" data-ng-controller="tableCtrl">

      <div class="panel panel-default">
        <div class="panel-heading">
          <table>

             <th><strong><span class="fa fa-th"></span> Job Postings&nbsp<%= search_form_for @search do |f| %>
            </th>
            <th>
              <%= f.text_field :name_or_job_name_or_city_or_state_cont, :placeholder => 'Search' %>
            </th>
            <th class="col-md-2 action"><%= f.submit "Search", :class => 'btn btn-default' %>
            </th>
          <% end %>

          <th class="col-md-2 action"> <%= button_to "Reset Search", request.path, :class =>'btn btn-default',:method => :get %></th>

          <th>&nbsp</th>

            <th class="pull-right">
              <% if @has_ref %>
                <% if current_admin.nil? %>
                  <%= button_to " #{@unreviewed_requests} Requests Pending Review", user_path(current_user.id),:method => :get,:class =>'btn btn-warning pull-right' %>
                <% else %>
                  <%= button_to "#{@unreviewed_requests} Requests Pending Review", admin_path(current_admin.id),:method => :get,:class =>'btn btn-warning btn-md btn-block pull-right' %>
                <% end %>

              <% end %>
            </th>
          </table>
        </div>

        <table class="table table-hover">
         <thead>
          <tr>
            <th><%= sort_link @search, :name, "Company Name" %></th>
            <th><%= sort_link @search, :job_name, "Position" %></th>
            <th><%= sort_link @search, :city, "City" %></th>
            <th><%= sort_link @search, :state, "State" %></th>
            <th><%= sort_link @search, :industry_1, "Industry" %></th>
            <th><%= sort_link @search, :referral_fee, "Referral Fee" %></th>
          </tr>
        </thead>

        <tbody>
          <% @jobs.each do |job| %>
          <tr>
            <td>
              <% if job.image_url.nil? %>
                <%= job.name %>
              <% else %>
                <%= image_tag "#{job.image_url(:thumb)}" %>
              <% end %>
            </td>

            <td><%= link_to job.job_name, "/jobs/#{job.id}" %></td>
            <td><%= job.city %></td>
            <td><%= job.state %></td>
            <td><%= job.industry_1 %></td>
            <td><%= job.referral_fee %></td>
            <td><%=link_to 'Delete', url_for(action: :destroy, id: job.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-warning btn-sm"%></td>
            <td><%=link_to 'Edit', edit_job_path(job.id), class: "btn btn-primary btn-sm"%></td>
          </tr>
       
          <% end %>
          
          </tbody>
          
        </table>
    </div>
  </div>
  <%= will_paginate @jobs%>
</div>
</section>




