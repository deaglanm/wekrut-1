<%= form_for @job do |f| %>
<div>
    <%= f.label :name, "Company Name" %><br>
    <%= f.text_field :name %>
  </div>

   <div>
    <%= f.label :job_name, "Position Title" %><br>
    <%= f.text_field :job_name %>
  </div>

   <div>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

   <div>
    <%= f.label :state %><br>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :description, "Job Description" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :speciality_1, "What skills are you looking for?" %><br>
    <%= f.text_field :speciality_1 %>
  </div>

  <div>
    <%= f.label :industry %><br>
    <%= f.select :industry_1, industry_choices %>
  </div>

<div>
  <%= f.label :referral_fee %><br>
  <%= f.text_field :referral_fee %>
</div>

 <div>
  <%= f.label :image, "Upload Logo File" %><br>
  <%= f.file_field :image  %>
</div>

  <div>
    <%= f.submit "Submit to Wekrut" %>
  </div>
<% end %>

<%= link_to 'Back', jobs_path %>
