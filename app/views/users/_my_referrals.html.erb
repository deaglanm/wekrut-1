
    <div class="page page-table">
      <div class="panel panel-default">
      <div class="panel-heading"><strong><span class="fa fa-th"></span>
        <% current_user.email %> Sent Referrals</strong>
        <%= link_to 'View Jobs', jobs_path %>
        <%= "#{@unreviewed_count} Reviews Pending Update"%>
      </div>
        <table class="table">
          <tr>
            <th>Company</th>
            <th>Job</th>
            <th>Candidate</th>
            <th>Date Created</th>
            <th>Date Updated</th>
            <th>Status</th>

          </tr>
          <% @sent_referrals.each do |referral| %>
          <tr>
            <td><%= link_to referral.job.name, job_path(referral.job.id), class: "#{referral.status}-stat" %></td>
            <td><%= link_to referral.job.job_name, job_path(referral.job.id), class: "#{referral.status}-stat" %></td>

            <td class="#{referral.is_interested}-stat"><%= referral.referral_name.titleize%></td>
            <!-- need to change the way class is entered -->
            <td class="#{referral.is_interested}-stat"><%= referral.created_at.strftime("%m/%d/%y %I:%M") %></td>
            <td class="#{referral.is_interested}-stat"><%= referral.updated_at.strftime("%m/%d/%y %I:%M") %></td>
            <td class="#{referral.is_interested}-stat"><%= referral.status.titleize%></td>
          </tr>
          <%end%>
        </table>
      </div>
      <%= will_paginate @sent_referrals%>
    </div>

