<%= render 'layouts/header' %>


  <div class="container" style="margin-top:80px">

    <div class="page page-table">
      <div class="panel panel-default">


        <div class="panel-heading">
          <div class="form-inline" role="form">
             <strong><span class="fa fa-th"></span>
            <%= current_admin.company %> </strong>
            <div class="form-group">
              <%= search_form_for @search, url: admin_path(@admin.id) do |f| %>
            </div>
            <div class="form-group">
                <%= f.text_field :job_name_or_referral_name_or_status_cont, :placeholder => 'Search' %>
            </div>
            <div class="form-group">
                <%= f.submit "Search", :class =>"btn btn-primary btn-md btn-block"%>
            </div>
            <div class="form-group">
              <%= button_to "Clear Search", request.path, :class =>"btn btn-primary btn-md btn-block",:method => :get %>
            </div>
            <div class="form-group pull-right">
              <%= button_to 'Create New Job', new_job_path, :class =>"btn btn-primary btn-md btn-block form-group",:method => :get %>
            </div>
            <% end %>
          </div>
        </div>

     <ul class="nav nav-tabs nav-justified">
      <li class="active"><a href="#all-referrals" data-toggle="tab">Referrals</a></li>
      <li class=""><a href="#pending-referrals" data-toggle="tab">
          <%="Pending Review (#{@pending_count})" %></a>
        </li>

    </ul>

       <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="all-referrals">
          <%= render 'admins/shared/all_referrals'%>
        </div>
        <div class="tab-pane fade" id="pending-referrals">
          <%= render 'admins/shared/pending_referrals'%>
        </div>
      </div>

      </div>
    </div>
  </div>
</section>
</br>
  <div class="container">
   <% if admin_signed_in? %>
   Signed in as <%= current_admin.company %>. Not you?
   <%= link_to "Sign out", destroy_admin_session_path, :method => :delete %>
   <% else %>
   <%= link_to "Sign up", new_admin_registration_path, class: "btn btn-default btn-lg" %> <%= link_to "sign in", new_admin_session_path, class: "btn btn-default btn-lg" %>
   <% end %>
<%= link_to 'New Job', new_job_path %>
<%= render 'layouts/footer' %>
